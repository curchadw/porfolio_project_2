
    <h3>Player Info Adjustment</h3>

    <form action ='/players/<%= @player.slug%>' method='POST'>
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label for = 'name'>Name:</label><br>
    <input type = 'text' name = 'name' id = 'name' value = '<%= @player.name %>'><br><br>

    <label for = 'position'>Position:</label><br>
    <input type = 'text' name = 'position' id = 'position' value ='<%= @player.position %>'><br><br>

    <label for = 'height'>Height:</label><br>
    <input type = 'text' name = 'height' id = 'height' value = '<%= @player.height %>'><br><br>

    <label for = 'weight'>Weight:</label><br>
    <input type = 'text' name = 'weight' id = 'weight' value = '<%= @player.weight %>'><br><br>

    <input type = 'submit' value = 'Make Changes'>
    </form>

    <a href = '/user_players/<%= current_user.username %>'>Cancel</a>


